package com.one.day1;

import java.util.Arrays;
import java.util.List;
import java.util.stream.Collectors;

public class ArrayCompressionExample {
    public static void main(String[] args) {
        String[] inputArray = {"t", "e", "e", "s", "s", "s", "h"};
        String compressedString = compressArrayToString(inputArray);
        System.out.println("Output: " + compressedString); // Output: te2s3h
    }

    public static String compressArrayToString(String[] inputArray) {
        List<String> list = Arrays.asList(inputArray);
        return list.stream()
                .collect(Collectors.groupingBy(s -> s, Collectors.counting()))
                .entrySet().stream()
                .map(entry -> entry.getKey() + (entry.getValue() > 1 ? entry.getValue() : ""))
                .collect(Collectors.joining());
    }
}
