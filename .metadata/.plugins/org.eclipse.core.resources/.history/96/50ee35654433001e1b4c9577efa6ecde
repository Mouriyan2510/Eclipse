package com.one.day1;

import java.util.Arrays;
import java.util.List;

public class FindOccurance {
	public static void main(String[] args) {
//		int a=1454244;
//		int b= 0;
//		int c=0;
//		while(a!=0) {
//			c=a%10;
//			if(c==4) {
//				b=b+1;
//			}
//			a=a/10;
//		}
//		System.out.println(b);
		Integer prev=null;
		int sum = 0;
        int count = 0;
		
		List<Integer>a=Arrays.asList(4,3,5,4);
		 for (Integer num : a) {
	            if (prev != null && num.equals(prev)) {
	                sum += num;
	                count++;
	            }
	            prev = num;
	        }
		 System.out.println(sum+"--"+count);
	}
}
