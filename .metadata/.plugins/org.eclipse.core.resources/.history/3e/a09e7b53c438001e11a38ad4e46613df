package com.one.day1;

import java.util.Arrays;
import java.util.Collections;
import java.util.List;
import java.util.stream.Collectors;

import java.util.Arrays;
import java.util.List;
import java.util.stream.Collectors;

public class ArrayCompression {

    public static void main(String[] args) {
        List<String> inputList = Arrays.asList("t", "e", "e", "s", "s", "s", "h");

        String compressedString = inputList.stream()
                .collect(Collectors.groupingBy(e -> e, Collectors.counting()))
                .entrySet()
                .stream()
                .map(entry -> entry.getKey() + (entry.getValue() > 1 ? entry.getValue() : ""))
                .collect(Collectors.joining());

        System.out.println("Output: " + compressedString);
    }
}