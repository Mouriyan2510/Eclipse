public class Dc {
	public static void main(String[] args) {
//	String wd="AABBBBCCCCGGGGYYYYYYYOOO";
	String wd="maruthamalaimanilaemurugaiya";
	char ch[]=wd.toCharArray();
	
	List<Character>hj=new ArrayList<>();
	for(int i=0;i<ch.length;i++) {
		hj.add(ch[i]);
	}
//	List <Character> yu=hj.stream().distinct().collect(Collectors.toList());
////	System.out.println(yu);
//	Map<Character, Long> countByCharacter = wd.chars()
//            .mapToObj(c -> (char) c)
//            .collect(Collectors.groupingBy(c -> c, Collectors.counting()));
//	System.out.println(countByCharacter);
	
	
	Map<Character, Long>ty= hj.stream().collect(Collectors.groupingBy(c->c,Collectors.counting()));
	ty.forEach((y,u)-> System.out.print(y+""+u));
	}
	

}
