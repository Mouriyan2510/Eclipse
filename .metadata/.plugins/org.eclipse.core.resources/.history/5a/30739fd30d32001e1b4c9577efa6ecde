package com.one.day1;

import java.util.Arrays;
import java.util.Collections;

import java.util.Arrays;

public class SortDigitsInIntegers {
    public static void main(String[] args) {
        int[] a = {142, 521, 927};
        int[] sortedIntegers = sortDigitsInIntegers(a);
//        System.out.println(Arrays.toString(sortedIntegers)); // Output: [124, 125, 279]
    }

    public static int[] sortDigitsInIntegers(int[] arr) {
        int[] result = new int[arr.length];

        for (int i = 0; i < arr.length; i++) {
            String numStr = String.valueOf(arr[i]);
            char[] digits = numStr.toCharArray();
            Arrays.sort(digits);
           \
            String sortedStr = new String(digits);
            result[i] = Integer.parseInt(sortedStr);
        }

        return result;
    }
}
