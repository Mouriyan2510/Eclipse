package com.one.day1;

public class Thousand {
    public static void main(String[] args) {
        int limit = 10000;

        for (int i = 0; i <= limit + 1; i++) {
            if (i < limit) {
                System.out.println(formatNumber(i));
            } else {
                System.out.println("a" + formatNumber(i - limit - 1));
            }
        }
    }

    public static String formatNumber(int num) {
        if (num < 10) {
            return "0000" + num;
        } else if (num < 100) {
            return "000" + num;
        } else if (num < 1000) {
            return "00" + num;
        } else if (num < 10000) {
            return "0" + num;
//        } else {
//            return Integer.toString(num);
//        }
    }
}